#include <stdio.h>
#include <string.h>
#include <stdlib.h>

char *LoadString(int N); //ترجع مؤشر من سلسلة تحتوي على عدد الاحرف المقروءة
int StringLength(char *str);//تحسب طول السلسلة
void LoadArray(char *p, char arr[]);//تنسخ السلسلة من المؤشر الى المصفوفة 
void ReverseArray(char arr[], char rev[], int n);// عكس ترتيب الاحرف في المصفوفة ةتضعها في rev
void DisplayArray(char arr[], int n);//تطبع محتوى المصفوفة على شاشة
int SumStringASCII(char *p);//تحسب مجموه القيم في السلسلة
void ReverseString(char *start, char *end);//تعكس السسلة النصية نفسها باستخدام المؤشر داخل نفس المشر
char *LoadString(int N) {
    char *str = (char *)malloc((N + 1) * sizeof(char)); // حجز مكان لذكرة مع +1 للحرف النهائي \0'
    if (str == NULL) {
        printf("\n لا يوجد مساحة في الذاكرة.\n");
       return NULL;
    }
    printf("\n enter a text message:");
    fgets(str, N + 1, stdin); // قراءة السلسلة من المستخدم
    return str;
}

 int StringLength(char *str){  /* تحسب طول السلسلة  */
    int len = 0;
    while (str[len] != '\0') {
        len++;
    }
    return len;
}

void LoadArray(char *p, char arr[]) {/* تنسخ السلسلة من الؤشر الى المصفوفة*/
    int i = 0;
    while (p[i] != '\0') {
        arr[i] = p[i];
        i++;
    }
    arr[i] = '\0'; // إنهاء السلسلة
}

void ReverseArray(char arr[], char rev[], int n) {/* تعكس محتوى المصفوفة وتحفظه في rev*/
    for (int i = 0; i < n; i++) {
        rev[i] = arr[n - 1 - i];
    }
    rev[n] = '\0'; // إنهاء السلسلة
}

void DisplayArray(char arr[], int n) {/*تطبع محتوى المصفوفة*/
    for (int i = 0; i < n; i++) {
        printf("%c", arr[i]);
    }
    printf("\n");
}

int SumStringASCII(char *p) {/* تحسب مجموع قيم ASCII لكل حرف في السلسلة باستخدام recursion*/
    if (*p == '\0') {
        return 0;
    }
    return (int)(*p) + SumStringASCII(p + 1);
}

void ReverseString(char *start, char *end) {   /* and يشير الى اخر حرفstart الى اول حرف*/
    if (start >= end) return;

    // تبديل الحرفين
    char temp = *start;
    *start = *end;
    *end = temp;
    
 /*واحد يزيد واحد ينقص*///تعكس السسلة النصية نفسها باستخدام المؤشر داخل نفس المشر
    // استدعاء الدالة بشكل متكرر
    ReverseString(start + 1, end - 1); 
}

int main() {
    char *str;
    int n;

    printf("\n Please enter the maximum size of the string:");
    scanf("%d", &n);
    getchar(); // \n لحذف الـ 

    str = LoadString(n);
    int len = StringLength(str);

    char arr[len + 1], rev[len + 1];

    LoadArray(str, arr);

    printf("Original array:");
    DisplayArray(arr, len);

    ReverseArray(arr, rev, len);
    printf("Reversed array:");
    DisplayArray(rev, len);

    int sum = SumStringASCII(str);
    printf("Sum of ASCII values (recursive): %d\n", sum);

    ReverseString(str, str + len - 1);
    printf("String reversed recursively: %s\n", str);

    free(str);
    return 0;
}