#include <stdio.h>

// دالة جمع
int add(int a, int b) {
    return a + b;
}

// دالة إيجاد الأكبر
int max(int a, int b) {
    return (a > b) ? a : b;
}

// دالة حساب المعدل
float average(int arr[], int n) {
    int sum = 0;
    for(int i = 0; i < n; i++) {
        sum += arr[i];
    }
    return (float)sum / n;
}

int main() {
    int n;
    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];
    printf("Enter %d numbers: ", n);
    for(int i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    // إيجاد أكبر عدد
    int largest = arr[0];
    for(int i = 1; i < n; i++) {
        largest = max(largest, arr[i]);
    }

    // حساب المعدل
    float avg = average(arr, n);

    // تجربة دالة الجمع (اختياري للتوضيح)
    int s = add(10, 20);

    printf("Largest number = %d\n", largest);
    printf("Average = %.2f\n", avg);
    printf("Example add(10, 20) = %d\n", s);

    return 0;
}
